<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config />

    <bean id="restOperations" class="org.springframework.web.client.RestTemplate"/>

    <bean id="identityFilter" class="org.barlas.fractal.identity.IdentityFilter"/>

    <bean id="dynamo" class="org.barlas.fractal.dynamo.DynamoObjectFactory"/>

    <bean id="databaseInitializer" class="org.barlas.fractal.dynamo.DatabaseInitializer"/>

    <bean id="googleService" class="org.barlas.fractal.identity.GoogleService"/>

    <bean id="userHolder" class="java.lang.ThreadLocal"/>

    <bean id="userService" class="org.barlas.fractal.dynamo.UserService"/>

    <bean id="scriptService" class="org.barlas.fractal.dynamo.ScriptService"/>

</beans>